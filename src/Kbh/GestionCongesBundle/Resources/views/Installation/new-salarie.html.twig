                                                    <div class="form-group">
                                                        <label class="control-label col-md-3">Nom</label>
                                                        <div class="col-md-8">
                                                            {{ form_widget(form.nom,{'attr': {'class':'form-control', 'placeholder':"Saisissez le nom"}}) }}
                                                            <span class="help-block">
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3">Prénoms</label>
                                                        <div class="col-md-8">
                                                            {{ form_widget(form.prenom,{'attr': {'class':'form-control', 'placeholder':"Saisissez le(s) prénom(s)"}}) }}
                                                            <span class="help-block">
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3">Civilité</label>
