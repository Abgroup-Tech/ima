                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3">Date de naissance</label>
                                                        <div class="col-md-8">
                                                            {{ form_widget(form.dateNaissance,{'attr': {'class':'form-control', 'placeholder':"yyyy/mm/dd"}}) }}
                                                            <span class="help-block text-danger">
                                                                {{ form_errors(form.dateNaissance) }}</span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3">N° Matricule</label>
                                                        <div class="col-md-8">
                                                            {{ form_widget(form.matricule,{'attr': {'class':'form-control', 'placeholder':"XXXXXXX"}}) }}
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3">Email</label>
                                                        <div class="col-md-8">
                                                            {{ form_widget(form.email,{'attr': {'class':'form-control', 'placeholder':"salarie@societe.com"}}) }}
                                                            <span class="help-block text-danger">
                                                                {{ form_errors(form.email) }}</span>
                                                        </div>
                                                    </div> 
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3">Téléphone</label>
                                                        <div class="col-md-8">
                                                            {{ form_widget(form.telephone,{'attr': {'class':'form-control', 'placeholder':"(XXX) XXXXXXXX"}}) }}
                                                            <span class="help-block text-danger">
                                                                {{ form_errors(form.telephone) }}</span>
                                                        </div>
                                                    </div> 

                                                    <div class="form-group last">
                                                        <label class="control-label col-md-3">Image de profil</label>
                                                        <div class="col-md-8">
                                                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                                                <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                                                    <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt=""/>
                                                                </div>
                                                                <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;">
                                                                </div>
