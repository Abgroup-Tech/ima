                                                            {{ form_widget(form.typeContratTravail,{'attr': {'class':'form-control', 'placeholder':" CDI, CDD, ... "}}) }}
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3">Statut</label>
