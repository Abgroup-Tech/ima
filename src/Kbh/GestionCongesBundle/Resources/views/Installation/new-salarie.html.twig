                                                        </div>
                                                    </div>
                                                    <span style="display:none">
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3">Responsable Hierarchique</label>
                                                        <div class="col-md-8">
                                                            {{ form_widget(form.superviseur,{'attr': {'class':'form-control'}}) }}
                                                            <span class="help-block">
                                                                {{ form_errors(form.superviseur) }}</span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-md-3">Unité</label>
                                                        <div class="col-md-8">
                                                            {{ form_widget(form.unite,{'attr': {'class':'form-control'}}) }}
                                                            <span class="help-block">
                                                                {{ form_errors(form.unite) }}</span>
                                                        </div>
                                                    </div>
                                                    </span>    
