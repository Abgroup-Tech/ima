{% extends '::base-super-admin.html.twig' %}

{% block main %}
    <!-- BEGIN PAGE CONTENT -->
    <div class="page-content" style="min-height: 800px">
        <div class="container">
            <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title">Modal title</h4>
                        </div>
                        <div class="modal-body">
                            Widget settings form goes here
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn blue">Save changes</button>
                            <button type="button" class="btn default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
            <!-- /.modal -->
            <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <a href="{{ path('welcome') }}">Tableau de bord</a><i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="{{ path('sup_ad_systeme_show') }}">Système</a><i class="fa fa-circle"></i>
                </li>
                <li class="active">
                    Liste des droits
                </li>
            </ul>
            <!-- END PAGE BREADCRUMB -->
            <!-- BEGIN PAGE CONTENT INNER -->
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="icon-settings font-green-sharp"></i>
                                <span class="caption-subject font-green-sharp bold uppercase">Droits des salariés</span>
                            </div>
                            {#<span>
                            <a class=' pull-right btn btn-circle btn-success' href="{{ path('ad_absencesat_new') }}">nouvelle enregistrement +</a>
                            </span>#}
                        </div>
                        <div class="portlet-body">
                            <div class="tab-content">
                                <div class="tab-pane fade active in" id="tab_1">
                                    <div class="scroller">
                                        <table class="table table-hover table-light" >
                                             <thead>
                                                <tr>
                                                    <th>Id</th>
                                                    <th>Droits acquis annee en cours</th>
                                                    <th>Reliquat droits anterieur</th>
                                                    <th>Cumul droits acquis</th>
                                                    <th>Droits pris</th>
                                                    <th>Permissions prise</th>
                                                    <th>Solde permissions</th>
                                                    <th>Total droits a prendre</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            {% for entity in entities %}
                                                <tr>
                                                    <td><a href="{{ path('sup_ad_droits_edit2', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                                    <td>{{ entity.droitsAcquisAnneeEnCours }}</td>
                                                    <td>{{ entity.reliquatDroitsAnterieur }}</td>
                                                    <td>{{ entity.cumulDroitsAcquis }}</td>
                                                    <td>{{ entity.droitsPris }}</td>
                                                    <td>{{ entity.permissionsPrises }}</td>
                                                    <td>{{ entity.soldePermissions }}</td>
                                                    <td>{{ entity.totalDroitsAprendre }}</td>
                                                    <td>
                                                     <a class="btn btn-success btn-sm" href="{{ path('sup_ad_droits_edit2', { 'id': entity.id }) }}"><i class="icon-pencil "></i></a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PAGE CONTAINER-->
        </div>
        <!-- BEGIN PAGE CONTENT -->
    </div>
    <!-- END PAGE CONTENT -->
    <style>
        th,td{
            text-align: center;
        }
        body{
            font-size: 14px;
        }
        .font-blue-madison {
            color: rgba(34, 96, 150, 0.88) !important;
        }
        .b-r{
            border-right: 1px solid rgb(187, 188, 200);
        }
        .p-c{
            text-align: center;
        }
        .scroll-to-top{
            display: none !important;
        }

    </style>

{% endblock %}
