{% extends '::base-super-admin.html.twig' %}

{% block main %}
    {#    <h1>Salarie creation</h1>
        {{ form(form) }}#}
    <!-- BEGIN PAGE CONTENT -->
    <div class="page-content" style="min-height: 800px">
        <div class="container">
            <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title">Aide ?</h4>
                        </div>
                        <div class="modal-body">
                            
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn default" data-dismiss="modal">Fermer</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
            <!-- /.modal -->
            <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <a href="{{ path('welcome') }}">Tableau de board</a><i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="{{ path('sup_ad_salarie_show', {'id': entity.salarie.id }) }}">Détails salarie</a><i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="{{ path('sup_ad_systeme_show') }}">Système</a><i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="{{ path("sup_ad_droits_list")}}">Liste des droits</a><i class="fa fa-circle"></i>
                </li>
                <li class="active">
                    Modifier droits
                </li>
            </ul>
            <!-- END PAGE BREADCRUMB -->
            <!-- BEGIN PAGE CONTENT INNER -->
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light bordered form-fit">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="icon-user font-blue-hoki"></i>
                                <span class="caption-subject font-blue-hoki bold uppercase">Modification</span>
                                <span class="caption-helper">droits</span>
                            </div>
                            
                        </div>
                        <div class="portlet-body form">
                            {% if erreur %}
                                <div class="note note-danger">
                                    <h4 class="block">{{ erreur }}</h4>
                                    <p>Une érreur c'est produite lors de la modification du salarié. Veulliez revérifier tous les champs</p>
                                </div>
                            {% endif %}
                            <!-- BEGIN FORM-->
                            {{ form_start(form,{'attr': {'class':'form-horizontal form-bordered form-label-stripped'}}) }}  
                            {#<form class="form-horizontal form-bordered form-label-stripped" action="{{ path('admin_salarie_create')}}" method="POST">#}
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="control-label col-md-3">Salarié rattaché</label>
                                    <div class="col-md-8">
                                       <input class="form-control" type="text" value="{{ entity.salarie }}" readonly="true"/>
                                        <span class="help-block">
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Droits acquis en {{"now"|date("Y")}}</label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.droitsAcquisAnneeEnCours,{'attr': {'class':'form-control'}}) }}
                                        <span class="help-block">
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Congés non pris années précédentes</label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.reliquatDroitsAnterieur,{'attr': {'class':'form-control'}}) }}
                                        <span class="help-block">
                                        </span>
                                    </div>
                                </div>
                                 <div class="form-group">
                                    <label class="control-label col-md-3">Cumul droits acquis</label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.cumulDroitsAcquis,{'attr': {'class':'form-control'}}) }}
                                        <span class="help-block">
                                        </span>
                                    </div>
                                </div>       
                                <div class="form-group">
                                    <label class="control-label col-md-3">Congés pris en {{"now"|date("Y")}}</label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.droitsPris,{'attr': {'class':'form-control'}}) }}
                                        <span class="help-block">
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Permissions prises</label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.permissionsPrises,{'attr': {'class':'form-control'}}) }}
                                        <span class="help-block">
                                        </span>
                                    </div>
                                </div>           
                                <div class="form-group">
                                    <label class="control-label col-md-3">Solde permissions</label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.soldePermissions,{'attr': {'class':'form-control'}}) }}
                                        <span class="help-block">
                                        </span>
                                    </div>
                                </div>     
                                <div class="form-group">
                                    <label class="control-label col-md-3">Solde congés</label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.totalDroitsAprendre,{'attr': {'class':'form-control'}}) }}
                                        <span class="help-block">
                                        </span>
                                    </div>
                                </div>        
                            </div>
                            <div class="form-actions" style="background: rgba(249, 249, 249, 0.8) none repeat scroll 0% 0%;">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-3 pull-right">
                                        <a href="{{ path('sup_ad_salarie_show', {'id': entity.salarie.id }) }}" class="btn red">Annuler</a>
                                        <input type="submit" class="btn green" value="Mettre à jour"/>
                                    </div>
                                </div>
                            </div>
                            {{ form_rest(form) }}  
                            </form>
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PAGE CONTAINER-->
        </div>
        <!-- BEGIN PAGE CONTENT -->
    </div>
    <!-- END PAGE CONTENT -->
    <style>

        body{
            font-size: 14px;
        }
        .font-blue-madison {
            color: rgba(34, 96, 150, 0.88) !important;
        }
        .b-r{
            border-right: 1px solid rgb(187, 188, 200);
        }
        .p-c{
            text-align: center;
        }
        .scroll-to-top{
            display: none !important;
        }

    </style>
