                                                                                                             {{ form_widget(form.nbJoursOuvrables, {'attr': {'class': 'form-control','type': 'number','readonly':'true'}}) }}
                                                                                                        <span class="help-block">
                                                                                                            Durée de son congé ( en jours ouvrable )</span>
                                                                                                        </div>

                                                                                                </div>
                                                                                        </div>
                                                                                        <!--/span-->
                                                                                        <div class="col-md-12">
                                                                                                <div class="form-group">
                                                                                                    <label class="control-label col-md-3">Date Départ</label>
                                                                                                    <div class="col-md-6">
                                                                                                       <div class="col-md-12 input-group">
                                                                                                                <div class="input-icon">
                                                                                                                        <i class="fa fa-calendar fa-fw"></i>
                                                                                                                        <input id="dateDebut" class="form-control" type="date" value="{{ entity.dateDebut|date('Y-m-d') }}" readonly>
                                                                                                                         {#{{ form_widget(form.dateDebut, {'attr': {'class': 'form-control', 'type': 'datetime','readonly':'true'}}) }}#}
                                                                                                                </div>
                                                                                                        </div>
                                                                                                    <span class="help-block">
                                                                                                            Jour de son départ en congé
                                                                                                    </span>
                                                                                                    </div>
                                                                                                </div>
                                                                                        </div>
                                                                                         <div class="col-md-12">
                                                                                                <div class="form-group">
                                                                                                    <label class="control-label col-md-3">Date de Fin</label>
                                                                                                    <div class="col-md-6">
                                                                                                           <input id="dateFin" type="date" class="form-control" value="{{entity.dateFin|date('Y-m-d')}}" readonly="true">
                                                                                                             <span class="help-block">
                                                                                                            Date de fin de son congé</span>
                                                                                                    </div>
                                                                                                            <span class="help-block">
                                                                                                            {{ form_errors(form.dateFin) }}</span>
                                                                                                            <br/>
                                                                                                </div>
                                                                                        </div>
                                                                                         <div class="col-md-12">
                                                                                                <div class="form-group">
                                                                                                    <label class="control-label col-md-3">Date de retour</label>
                                                                                                    <div class="col-md-6">
                                                                                                              <input id="dateRetour" type="date" class="form-control" value="{{entity.dateRetour|date('Y-m-d')}}" readonly="true">
                                                                                                              <span class="help-block">
                                                                                                            Date de reprise du travail du collaborateur</span>
                                                                                                    </div>
                                                                                                            <span class="help-block">
                                                                                                            {{ form_errors(form.dateRetour) }}</span>
                                                                                                            <br/>
                                                                                                </div>
                                                                                        </div>
                                                                                         <div class="col-md-12">
                                                                                                <div class="form-group">

                                                                                                        <label class="control-label col-md-3">Piece Jointe</label>
                                                                                                        <div class="col-md-6">
                                                                                                                {{ form_widget(form.pieceJointe.file, {'attr': {'class': 'form-control'}}) }}
                                                                                                        <span class="help-block">
                                                                                                            Ajoutez une copie de la demande manuscrite</span>
                                                                                                        </div>

                                                                                                </div>
                                                                                        </div>
                                                                                         <div class="col-md-12" style="padding-bottom:40px;">
                                                                                                <div class="form-group">

                                                                                                        <label class="control-label col-md-3">Nommez le fichier importé</label>
                                                                                                        <div class="col-md-6">
                                                                                                                {{ form_widget(form.pieceJointe.name, {'attr': {'class': 'form-control'}}) }}
                                                                                                                  <span style="display:none">
                                                                                                                    {{ form_widget(form.pieceJointe.ajouterPar, {'attr': {'class': 'form-control',}}) }}
                                                                                                                </span>
                                                                                                        <span class="help-block">
                                                                                                            Nom du fichier</span>
                                                                                                        </div>

                                                                                                </div>
                                                                                        </div>

                                                                                </div>
                                                                        </div>
                                                                        <div class="row">
                                                                            <footer class="panel-footer text-right bg-light lter">
                                                                               <a class="btn btn-danger btn-s-xs" href="{{path('superviseur_demande_conge_for_salarie')}}"> Annuler </a>
                                                                               <input id="valider" type="submit" class="btn btn-success btn-s-xs" value="Confirmer la demande"/>
                                                                            </footer>
                                                                           <span style="display: none"> {{ form_rest(form) }}  </span>
                                                                            {{ form_end(form) }}
                                                                        </div>
                                                                <!-- END FORM-->
                                                               </div>

                                                        </div>
                                                    </div>
                                                </div>
                                        </div>
                                </div>
                        </div>
                        <!-- END PAGE CONTAINER-->
                </div>
                <!-- BEGIN PAGE CONTENT -->
        </div>
        <!-- END PAGE CONTENT -->
    </div>
</div>                
