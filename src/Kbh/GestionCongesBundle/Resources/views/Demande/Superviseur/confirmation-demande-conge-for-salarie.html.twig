                                                                        <div class="form-body" id="form-demande">

                                                                                <div class="row">
                                                                                    <div class="col-md-12"  style="padding-top: 18px;">
                                                                                                <div class="form-group">
                                                                                                    <label class="control-label col-md-3">Collaborateur</label>
                                                                                                    <div class="col-md-6">
                                                                                                           <input id="collab" class="form-control" value="{{entity.salarie}}" readonly="true">
                                                                                                             <span class="help-block">
                                                                                                            Collaborateur selectionné</span>
                                                                                                    </div>
                                                                                                            <span class="help-block">
                                                                                                            {{ form_errors(form.dateFin) }}</span>
                                                                                                            <br/>
                                                                                                </div>
                                                                                        </div>
                                                                                      <div class="col-md-12">
                                                                                                <div class="form-group">
