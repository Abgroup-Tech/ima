<script src="{{ asset('bundles/kbhgestionconges/assets/admin/pages/scripts/ui-general.js') }}"></script>
<script src="{{ asset('bundles/kbhgestionconges/js/slimscroll/jquery.slimscroll.min.js') }}"></script>
<script src="{{ asset('bundles/kbhgestionconges/js/slimscroll/jquery.slimscroll.min.js') }}" type="text/javascript"></script>
    
<script src="{{ asset('bundles/kbhgestionconges/js/app.js') }}" type="text/javascript"></script>
