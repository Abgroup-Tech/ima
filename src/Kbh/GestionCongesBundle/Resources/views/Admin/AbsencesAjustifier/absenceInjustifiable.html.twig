                                        <label class="control-label col-md-2">Nombre de jours</label>
                                        <div class="col-md-8">
                                            <input name="nbJours" id="nbJours" class="form-control" type="number" />
                                        </div>
                                </div>        
                        </div>
                        <div class="form-body">
                                <div class="form-group">
                                        <label class="control-label col-md-2">Date de retour</label>
                                        <div class="col-md-8">
                                            <input name="dateRetour" id="dateRetour" class="form-control" type="date" />
                                        </div>
                                </div>        
                        </div>
                        <div class="form-actions" style="background: rgba(249, 249, 249, 0.8) none repeat scroll 0% 0%;">
                                <div class="row">
                                        <div class="col-md-offset-3 col-md-3 pull-right">
                                      <a href="{{ path('ad_absencesajustifier') }}" class="btn red">Annuler</a>
                                      <input type="submit" class="btn green" value="Confirmer"/>
                                        </div>
                                </div>
                        </div> 
                        </form>
