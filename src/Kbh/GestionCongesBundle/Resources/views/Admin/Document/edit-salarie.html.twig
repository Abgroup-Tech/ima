												</div>
												<div class="form-group">
													<label class="control-label col-md-3">Date de naissance</label>
													<div class="col-md-8">
                        {{ form_widget(form.dateNaissance,{'attr': {'class':'form-control'}}) }}
                        <span class="help-block text-danger">
                        {{ form_errors(form.dateNaissance) }}</span>
													</div>
												</div>
                      <div class="form-group">
													<label class="control-label col-md-3">N° Matricule</label>
													<div class="col-md-8">
														{{ form_widget(form.matricule,{'attr': {'class':'form-control', 'placeholder':"Saisissez le matricule"}}) }}
													</div>
												</div>
