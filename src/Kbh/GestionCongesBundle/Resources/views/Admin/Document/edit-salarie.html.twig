													  <span class="help-block">
                        {{ form_errors(form.soldeConges) }}</span>
                       </div>
												</div>
             <div class="form-group">
													<label class="control-label col-md-3">Statut</label>
													<div class="col-md-8">
														{{ form_widget(form.statutEmploi,{'attr': {'class':'form-control'}}) }}
                         <span class="help-block">
                        {{ form_errors(form.statutEmploi) }}</span>
													</div>
												</div>
             <div class="form-group">
													<label class="control-label col-md-3">Role utilisateur</label>
													<div class="col-md-8">
														{{ form_widget(form.roleUtilisateur,{'attr': {'class':'form-control'}}) }}
                         <span class="help-block">
