                            {% endif %}
                            <!-- BEGIN FORM-->
                            {#{{ form_start(form,{'attr': {'class':'form-horizontal form-bordered form-label-stripped'}}) }}#}  
                            <form class="form-horizontal form-bordered form-label-stripped" action="{{ path('ad_import_unit_update', {'id' : entity.id})}}" method="POST">
                            <div class="form-body">
                                <div class="form-group">
                                    <label class="control-label col-md-3">nom</label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.nomUnite,{'attr': {'class':'form-control'}}) }}
                                        <span class="help-block">
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Sigle</label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.sigle,{'attr': {'class':'form-control'}}) }}
                                        <span class="help-block">
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Manager</label>
                                    <div class="col-md-8">
                                        {{ form_widget(form.nomManager,{'attr': {'class':'form-control'}}) }}
                                        <span class="help-block">
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Matricule manager</label>
