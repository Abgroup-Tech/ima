{% extends '::base-admin.html.twig' %}

{% block main %}
{#    <h1>Salarie creation</h1>
    {{ form(form) }}#}
    <!-- BEGIN PAGE CONTENT -->
    <div class="page-content" style="min-height: 800px">
        <div class="container">
            <!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title">Aide ?</h4>
                        </div>
                        <div class="modal-body">
                            <p></p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn default" data-dismiss="modal">Fermer</button>
                        </div>
                    </div>
                    <!-- /.modal-content -->
                </div>
                <!-- /.modal-dialog -->
            </div>
            <!-- /.modal -->
            <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <a href="{{ path('welcome') }}">Tableau de board</a><i class="fa fa-circle"></i>
                </li>
                <li class="active">
                    Nouveau salarié
                </li>
            </ul>
            <!-- END PAGE BREADCRUMB -->
            <!-- BEGIN PAGE CONTENT INNER -->
            <div class="row">
                <div class="col-md-12">
                    <div class="portlet light bordered form-fit">
                        <div class="portlet-title">
                                <div class="caption">
                                        <i class="icon-user font-blue-hoki"></i>
                                        <span class="caption-subject font-blue-hoki bold uppercase">Nouveau</span>
                                        <span class="caption-helper">salarié</span>
                                </div>
                                {#<div class="actions">
                                        <a class="btn btn-circle btn-icon-only btn-default" href="#portlet-config" data-toggle="modal" title="Besoin d'aide ?">
                                        <i class="icon-info"></i>
                                        </a>
                                </div>#}
                        </div>
                        <div class="portlet-body form">
                {% if erreur %}
                    <div class="note note-danger">
                        <h4 class="block">{{ erreur }}</h4>
                        <p>Une érreur c'est produite lors de la création du salarié. Veulliez revérifier tous les champs</p>
                    </div>
                    {% endif %}
                <!-- BEGIN FORM--> 
                <form class="form-horizontal form-bordered form-label-stripped" action="{{ path('ad_salarie_create')}}" method="POST" {{ form_enctype(form) }}>
                        <div class="form-body">
                                <div class="form-group">
                                        <label class="control-label col-md-3">Nom</label>
                                        <div class="col-md-8">
                          {{ form_widget(form.nom,{'attr': {'class':'form-control', 'placeholder':"Saisissez le nom"}}) }}
                                        <span class="help-block">
                                         </span>
                                </div>
                        </div>
                        <div class="form-group">
                                <label class="control-label col-md-3">Prénoms</label>
                                <div class="col-md-8">
                        {{ form_widget(form.prenom,{'attr': {'class':'form-control', 'placeholder':"Saisissez le(s) prénom(s)"}}) }}
                        <span class="help-block">
                                        </span>
                                </div>
                        </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Civilité</label>
                        <div class="col-md-8">
                        {{ form_widget(form.civilite,{'attr': {'class':'form-control', 'placeholder':"Saisissez la civilité "}}) }}
                        </div>
                </div>
                <div class="form-group">
                        <label class="control-label col-md-3">Date de naissance</label>
                        <div class="col-md-8">
                        {{ form_widget(form.dateNaissance,{'attr': {'class':'form-control', 'placeholder':"yyyy/mm/dd"}}) }}
                        <span class="help-block text-danger">
                        {{ form_errors(form.dateNaissance) }}</span>
                        </div>
                </div>
                      <div class="form-group">
                            <label class="control-label col-md-3">N° Matricule</label>
                            <div class="col-md-8">
                                    {{ form_widget(form.matricule,{'attr': {'class':'form-control', 'placeholder':"Saisissez le matricule"}}) }}
                            </div>
                    </div>
                       <div class="form-group">
                <label class="control-label col-md-3">Email</label>
                <div class="col-md-8">
                        {{ form_widget(form.email,{'attr': {'class':'form-control', 'placeholder':"salarie@societe.com"}}) }}
                        <span class="help-block text-danger">
                        {{ form_errors(form.email) }}</span>
                        </div>
                </div> 
                    <div class="form-group">
                <label class="control-label col-md-3">Téléphone</label>
                <div class="col-md-8">
                        {{ form_widget(form.telephone,{'attr': {'class':'form-control', 'placeholder':"salarie@societe.com"}}) }}
                        <span class="help-block text-danger">
                        {{ form_errors(form.telephone) }}</span>
                        </div>
                </div> 

                    <div class="form-group last">
                    <label class="control-label col-md-3">Image de profil</label>
                    <div class="col-md-8">
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                    <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                            <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt=""/>
                                    </div>
                                    <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;">
                                    </div>
                                    <div>
                                            <span class="btn default btn-file">
                                            <span class="fileinput-new">
                                            Choisir une image </span>
                                            <span class="fileinput-exists">
                                            Changer </span>
                                            {{ form_widget(form.image.file) }}
                                            </span>
                                            <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput">
                                            Supprimer </a>
                                    </div>
                            </div>
                            <div class="clearfix margin-top-10">
                                    <span class="label label-danger" style="margin-right:8px;">
                                    NOTE! 
                    </span> Pour un meilleur rendu veuillez insérer une belle image.
                                        </div>
                                </div>
                        </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Titre</label>
                        <div class="col-md-8">
                                {{ form_widget(form.image.name,{'attr': {'class':'form-control', 'placeholder':"Titre de l'image"}}) }}
                        </div>
                </div>
                <div class="form-group">
                        <label class="control-label col-md-3">Situation matrimoniale</label>
                        <div class="col-md-8">
                                {{ form_widget(form.statutMarital,{'attr': {'class':'form-control', 'placeholder':"Célibataire, Marié(e), Divorcé(e), Veuf, Veuve"}}) }}
                        </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Date d'embauche</label>
                    <div class="col-md-8">
                            {{ form_widget(form.dateEmbauche,{'attr': {'class':'form-control', 'placeholder':"yyyy/mm/dd"}}) }}
                    <span class="help-block text-danger">
                        {{ form_errors(form.dateEmbauche) }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                            <label class="control-label col-md-3">N° CNPS</label>
                            <div class="col-md-8">
                                    {{ form_widget(form.numeroCnps,{'attr': {'class':'form-control', 'placeholder':" XXXXXX "}}) }}
                            </div>
                    </div>
                      <div class="form-group">
                            <label class="control-label col-md-3">Poste</label>
                            <div class="col-md-8">
                                    {{ form_widget(form.poste,{'attr': {'class':'form-control'}}) }}
                            </div>
                    </div>
                     <div class="form-group">
                        <label class="control-label col-md-3">Responsable Hierarchique</label>
                        <div class="col-md-8">
                                {{ form_widget(form.superviseur,{'attr': {'class':'form-control'}}) }}
                        <span class="help-block">
                        {{ form_errors(form.superviseur) }}</span>
                       </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Unité</label>
                        <div class="col-md-8">
                                {{ form_widget(form.unite,{'attr': {'class':'form-control'}}) }}
                        <span class="help-block">
                        {{ form_errors(form.unite) }}</span>
                       </div>
                    </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Contrat</label>
                            <div class="col-md-8">
                                    {{ form_widget(form.typeContratTravail,{'attr': {'class':'form-control', 'placeholder':" CDI, CDD, ... "}}) }}
                            </div>
                    </div>
                      <div class="form-group">
                                <label class="control-label col-md-3">Statut</label>
                                <div class="col-md-8">
                                        {{ form_widget(form.statutEmploi,{'attr': {'class':'form-control', 'placeholder':" CDI, CDD, ... "}}) }}
                                </div>
                        </div>
             
             
                      <div class="form-group">
                                <label class="control-label col-md-3">Username</label>
                                <div class="col-md-8">
                                        {{ form_widget(form.user.username,{'attr': {'class':'form-control'}}) }}
                                </div>
                        </div>
                      <div class="form-group">
                                <label class="control-label col-md-3">Roles</label>
                                <div class="col-md-8">
                                        {{ form_widget(form.user.roles,{'attr': {'class':'form-control'}}) }}
                                </div>
                        </div>
                </div>
                <div class="form-actions" style="background: rgba(249, 249, 249, 0.8) none repeat scroll 0% 0%;">
                        <div class="row">
                                <div class="col-md-offset-3 col-md-3 pull-right">
                          <a href="{{ path('welcome')}}" class="btn red">Annuler</a>
                          <input type="submit" class="btn green" value="Soumettre"/>
                                </div>
                        </div>
                </div>
                   {{ form_rest(form) }}  
                                </form>
                                <!-- END FORM-->
                        </div>
                </div>
                </div>
            </div>
            <!-- END PAGE CONTAINER-->
        </div>
        <!-- BEGIN PAGE CONTENT -->
    </div>
    <!-- END PAGE CONTENT -->
    <style>

        body{
            font-size: 14px;
        }
        .font-blue-madison {
            color: rgba(34, 96, 150, 0.88) !important;
        }
        .b-r{
            border-right: 1px solid rgb(187, 188, 200);
        }
        .p-c{
            text-align: center;
        }
        .scroll-to-top{
            display: none !important;
        }

    </style>
