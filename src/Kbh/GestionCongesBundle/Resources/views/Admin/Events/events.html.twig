                                                            <td>{{ notification.dateEnvoi|date('d-m-Y H:i:s') }}</td>
                                                        </tr>
                                                    {% endif %}
                                                      {% set num = num + 1%}   
                                                {% endfor %}

                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PAGE CONTAINER-->
        </div>
        <!-- BEGIN PAGE CONTENT -->
    </div>
    <!-- END PAGE CONTENT -->
    <style>
        th,td{
            text-align: center;
            color:#345F98 !important;
        }
    </style>

