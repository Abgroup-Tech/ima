{% trans_default_domain 'FOSUserBundle' %}
<div class="input-group">
      <span class="input-group-btn">
        <a href="{{path('fos_user_profile_show')}}" class="btn btn-success btn-rounded" type="button"><i class="fa fa-arrow-left"></i></a>
      </span>
      <input style='padding-left: 39px;' type="password" class="form-control text-sm btn-rounded" disabled placeholder="retourner à votre profile">
</div>
<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
    <header class="wrapper text-center">
          <strong>CHANGER MOT DE PASSE</strong>
        </header>
    <div class="list-group">
    {{ form_widget(form.current_password, {'attr': {'class': 'form-control-1 no-border','placeholder': 'Mot de passe initial'}}) }}
    <p>{{ form_errors(form.current_password) }}</p>
    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control-1 no-border','placeholder': 'Nouveau mot de passe'}}) }}
    <p>{{ form_errors(form.plainPassword.first) }}</p>
    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control-1 no-border','placeholder': 'Confirmez mot de passe'}}) }}
    <p>{{ form_errors(form.plainPassword.second) }}</p> 
    {{ form_rest(form) }}
    </div>
    <div>
        <input class="btn btn-lg btn-primary btn-block" type="submit" value="{{ 'Soumettre'|trans }}" />
    </div>
</form>
<br/>
