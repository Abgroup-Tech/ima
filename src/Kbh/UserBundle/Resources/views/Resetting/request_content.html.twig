{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <h3 style="font-size: 20px;text-align: left;">Mot de passe oublié ?</h3>
                <p>
                         Entrez votre <b>email</b> ou votre <b>username</b> en dessous pour le réinitialiser.
                </p>
    <div class="form-group">
         {% if invalid_username is defined %}
        <div class="alert alert-danger" style="font-size: 14px;">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <i class="fa fa-warning"></i><strong> ERREUR!</strong> 
            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</p>
        </div>
        {% endif %}   
        <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    <input class="form-control placeholder-no-fix" type="text" id="username" name="username" required="required" placeholder="Email ou Username" />
            </div>
    </div>
    <div class="form-actions">
                    <a id="blockui_sample_1_3" href="{{path('fos_user_security_login')}}" class="btn btn-danger">
                    <i class="m-icon-swapleft m-icon-white"></i> Retour </a>
                    <button id="blockui_sample_1_3" type="submit" class="btn green-haze pull-right">
                    Réinitialiser <i class="m-icon-swapright m-icon-white"></i>
                    </button>
    </div>
    {#<div>
        <input type="submit" value="{{ 'resetting.request.submit'|trans }}" />
    </div>#}
    <style>
.login .content .form-actions .btn-default {
    font-weight: 600;
    padding: 7px 25px !important;
    color: #6c7a8d;
    background-color: #ffffff;
    border: none;
}
.login .content .form-control {
    border: none;
    background-color: #dde3ec;
    height: 36px;
    color: #8290a3;
    border: 1px solid #dde3ec;
}
    </style>
</form>
