                {% endif %}
                {% if item == 12%}
                <a href="{{ path('sup_ad_reinitialisation_donnees', { 'table': 'Historique-des-droits' }) }}" class="btn red" >Confirmer</a>
                {% endif %}
                {% if item == 13%}
